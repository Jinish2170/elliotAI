# ============================================================
# Veritas — Environment Variables
# Copy this file to .env and fill in your keys
# ============================================================

# --- NVIDIA NIM (REQUIRED for Vision + LLM) ---
# Get your API key from: https://build.nvidia.com/
NVIDIA_NIM_API_KEY=nvapi-xxxxxxxxxxxxxxxxxxxx
NVIDIA_NIM_ENDPOINT=https://integrate.api.nvidia.com/v1

# Vision model (for dark pattern detection)
NIM_VISION_MODEL=nvidia/neva-22b
NIM_VISION_FALLBACK=microsoft/phi-3-vision-128k-instruct

# LLM model (for Judge agent reasoning)
NIM_LLM_MODEL=meta/llama-3.1-70b-instruct

# --- Tavily Search (REQUIRED for Graph Investigator) ---
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=tvly-xxxxxxxxxxxxxxxxxxxx

# --- API Tuning (Optional — defaults are safe) ---
NIM_TIMEOUT=30
NIM_RETRY_COUNT=2
NIM_REQUESTS_PER_MINUTE=10
TAVILY_REQUESTS_PER_MINUTE=5

# --- Audit Budget Controls (Optional) ---
MAX_ITERATIONS=5
MAX_PAGES_PER_AUDIT=10
SCREENSHOT_TIMEOUT=15
TEMPORAL_DELAY=10
CONFIDENCE_THRESHOLD=0.6
MIN_EVIDENCE_COUNT=3

# --- Concurrency (Optional — tuned for 8GB RAM) ---
MAX_CONCURRENT_AUDITS=2
MAX_CONCURRENT_BROWSER_PAGES=3
INTER_REQUEST_DELAY_MS=500

# --- Browser (Optional) ---
BROWSER_HEADLESS=true
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# --- Embedding Model (Optional — runs locally) ---
EMBEDDING_MODEL=all-MiniLM-L6-v2
